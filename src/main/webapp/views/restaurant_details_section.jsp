                        <h3>${res.name }</h3>
                        <h6><i class="fa fa-bookmark" aria-hidden="true"></i>${cat.name }</h6>
                        <div class="product__details__price">
                        <fmt:formatNumber var="stars" value="${res.stars/res.reviewCount}" maxFractionDigits="1" minFractionDigits="1"/>
